{
  "name": "mongo-oplog",
  "version": "2.1.0",
  "description": "Watch mongodb oplog in a simple way",
  "author": "Jonathan Brumley <cayasso@gmail.com>",
  "homepage": "https://github.com/cayasso/mongo-oplog",
  "main": "./index.js",
  "types": "./src/index.d.ts",
  "scripts": {
    "test": "xo && mocha",
    "build": "npm run clean && ./node_modules/.bin/babel src -d lib",
    "prepare": "npm run build",
    "clean": "rm -rf lib/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/cayasso/mongo-oplog.git"
  },
  "keywords": [
    "data",
    "mongo",
    "mongodb",
    "watcher",
    "live",
    "oplog",
    "cursor"
  ],
  "license": "MIT",
  "dependencies": {
    "debug": "^3.1.0",
    "eventemitter3": "^3.1.0",
    "mongodb": "~3.0.x"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint-config-prettier": "^2.9.0",
    "mocha": "^5.2.0",
    "pre-commit": "1.2.2",
    "should": "^13.2.1",
    "xo": "^0.21.1"
  },
  "pre-commit": [
    "test"
  ],
  "xo": {
    "extends": [
      "prettier"
    ],
    "ignores": [
      "test/**"
    ],
    "rules": {
      "object-curly-spacing": 0,
      "no-unused-expressions": 0,
      "no-negated-condition": 0,
      "new-cap": 0
    }
  }
}
